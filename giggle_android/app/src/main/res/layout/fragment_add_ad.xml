<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".AddADFragment">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/txshopinfo"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:background="@color/colorBlue"
                android:layout_height="wrap_content"
                android:text="광고 등록"
                android:textSize="30dp"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/firstlayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txshopinfo">

                <TextView
                    android:id="@+id/txShopname"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="이름"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText

                    android:id="@+id/edShopName"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/border_dark"
                    android:ems="10"
                    android:hint="내용을 입력하세요."
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/txlocation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstlayout">

                <TextView
                    android:id="@+id/txPosition"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="위치"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/edPosition"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/border_dark"
                    android:ems="10"
                    android:hint="내용을 입력하세요."
                    android:inputType="textPersonName" />

                <ImageButton
                    android:src="@android:drawable/ic_menu_search"
                    android:id="@+id/btn_search1"
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:layout_height="wrap_content"
                    android:text="Search" />


            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/txlocation"
                android:id="@+id/Location_finded_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/검색_결과"
                    android:layout_width="100dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="검색 결과"
                    android:textSize="18dp" />

                <TextView
                    android:background="@drawable/border_dark"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:layout_marginRight="5dp"
                    android:id="@+id/Location_View" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/maplayout"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Location_finded_layout"
                tools:context=".AddADFragment">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_MyLocation1"
                    srcCompat="@android:drawable/ic_menu_mylocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/maplayout"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="사진"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:id="@+id/txaddImg"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/imglayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txaddImg">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="5"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_photo"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@android:drawable/ic_menu_add" />

                        <ImageView
                            android:id="@+id/add_photo1"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:src="@android:drawable/ic_menu_add" />

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/add_photo2"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:src="@android:drawable/ic_menu_add" />

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/add_photo3"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:src="@android:drawable/ic_menu_add" />

                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/add_photo4"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:src="@android:drawable/ic_menu_add" />
                    </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txworkinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="근무 정보"
                android:textColor="#000"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imglayout" />

            <LinearLayout
                android:id="@+id/datelayout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txworkinfo">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:text="날짜" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="시간" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="분" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeinfolayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/datelayout">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="시작" />

                <NumberPicker
                    android:id="@+id/stDay"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

                <NumberPicker
                    android:id="@+id/stHour"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

                <NumberPicker
                    android:id="@+id/stMinute"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/endlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timeinfolayout">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="종료" />

                <NumberPicker
                    android:id="@+id/fnDay"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

                <NumberPicker
                    android:id="@+id/fnHour"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

                <NumberPicker
                    android:id="@+id/fnMinute"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wagelayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/endlayout">

                <TextView
                    android:id="@+id/txHourlypay"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="시급"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edHourlyPay"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_edittext"
                    android:ems="10"
                    android:hint="8590"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/numlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wagelayout">

                <TextView
                    android:id="@+id/txperson"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="인원"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edPerson"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <TextView
                android:id="@+id/workinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingLeft="25dp"
                android:text="업무 내용"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/numlayout" />

            <EditText
                android:id="@+id/edBusinessInfo"
                android:layout_width="377dp"
                android:layout_height="88dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/white_edittext"
                android:ems="10"
                android:gravity="start|top"
                android:hint="내용을 입력하세요."
                android:inputType="textMultiLine"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/workinfo" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="기타 우대사항"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="성별"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btMan"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="남자"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/btWomen"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="여자"
                        android:textSize="18sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="나이"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edAge1"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="~"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/edAge2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="25dp"
                android:text="우대 요건"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:id="@+id/edPriorityReq"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_edittext"
                android:ems="10"
                android:gravity="start|top"
                android:hint="내용을 입력하세요."
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btRegister"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="등록" />

                <Button
                    android:id="@+id/btReset"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="초기화" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>