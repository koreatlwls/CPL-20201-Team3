<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:context=".SignInActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="검색어를 입력하세요"
        android:inputType="text"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/search"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="searchLocation"
        android:layout_toEndOf="@id/search"
        map:layout_constraintLeft_toRightOf="@id/search"
        map:layout_constraintTop_toTopOf="parent"
        android:text="Search"
        android:layout_toRightOf="@id/search" />

    <FrameLayout
        android:id="@+id/main_con"
        android:layout_width="0dp"
        android:layout_height="0dp"
        map:layout_constraintBottom_toTopOf="@id/bottom_nav"
        map:layout_constraintLeft_toLeftOf="parent"
        map:layout_constraintRight_toRightOf="parent"
        map:layout_constraintTop_toBottomOf="@id/search">

    </FrameLayout>
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="10dp"
        android:layout_height="10dp"
        tools:context=".MainActivity" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        map:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        map:itemIconTint="@color/colorGreen"
        map:itemTextColor="#ffffff"
        map:menu="@menu/bottom_nav"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

