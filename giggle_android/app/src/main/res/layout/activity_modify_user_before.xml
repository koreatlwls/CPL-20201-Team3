<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyUserBeforeActivity">

    <TextView
        android:id="@+id/ModifyUserBeforeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="보안을 위해 비밀번호를 다시 입력해주세요."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ModifyUserBeforeProfilePic" />

    <ImageView
        android:id="@+id/ModifyUserBeforeProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ModifyUserBeforePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ModifyUserBeforeLabel" />

    <Button
        android:id="@+id/ModifyUserBeforeOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="확인"
        app:layout_constraintEnd_toEndOf="@+id/ModifyUserBeforePassword"
        app:layout_constraintTop_toBottomOf="@+id/ModifyUserBeforePassword" />

    <Button
        android:id="@+id/ModifyUserBeforeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="뒤로가기"
        app:layout_constraintStart_toStartOf="@+id/ModifyUserBeforePassword"
        app:layout_constraintTop_toBottomOf="@+id/ModifyUserBeforePassword" />
</androidx.constraintlayout.widget.ConstraintLayout>